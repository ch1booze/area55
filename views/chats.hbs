<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Chats</title>
  </head>
  <body>
    <div class='chat-wrapper'>
      {{#each chats}}
        <div class='chat'>
          <div class='chat-time'>{{time}}</div>
          <div class='conversation'>
            <div class='message user'><strong>User:</strong> {{query}}</div>
            <div class='message ai'><strong>AI:</strong> {{reply}}</div>
          </div>
        </div>
      {{/each}}
    </div>
  </body>
</html>
